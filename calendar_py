import calendar
import datetime

def mostrar_calendario_python():
    año_actual = datetime.datetime.now().year
    mes_actual = datetime.datetime.now().month
    
    while True:
        print("\n" + "="*40)
        print("        CALENDARIO EN PYTHON")
        print("="*40)
        print(f"1. Ver calendario del mes actual")
        print("2. Ver calendario de un año específico")
        print("3. Ver calendario de un mes específico")
        print("4. Salir")
        
        opcion = input("\nSelecciona una opción (1-4): ")
        
        if opcion == "1":
            print(f"\nCalendario de {mes_actual}/{año_actual}:")
            print(calendar.month(año_actual, mes_actual))
            
        elif opcion == "2":
            try:
                año = int(input("Ingresa el año: "))
                print(f"\nCalendario del año {año}:")
                print(calendar.calendar(año))
            except ValueError:
                print("¡Error! Por favor ingresa un año válido.")
                
        elif opcion == "3":
            try:
                año = int(input("Ingresa el año: "))
                mes = int(input("Ingresa el mes (1-12): "))
                if 1 <= mes <= 12:
                    print(f"\nCalendario de {mes}/{año}:")
                    print(calendar.month(año, mes))
                else:
                    print("¡Error! El mes debe estar entre 1 y 12.")
            except ValueError:
                print("¡Error! Por favor ingresa números válidos.")
                
        elif opcion == "4":
            print("¡Hasta luego!")
            break
            
        else:
            print("Opción no válida. Por favor selecciona 1-4.")

# Ejecutar el programa
if __name__ == "__main__":
    mostrar_calendario_python()
