#include <stdio.h>
#include <stdlib.h>
#include <time.h>

// Función para determinar si un año es bisiesto
int esBisiesto(int año) {
    return (año % 4 == 0 && año % 100 != 0) || (año % 400 == 0);
}

// Función para obtener el día de la semana (0 = domingo, 1 = lunes, etc.)
int obtenerDiaSemana(int dia, int mes, int año) {
    if (mes < 3) {
        mes += 12;
        año--;
    }
    int k = año % 100;
    int j = año / 100;
    return (dia + 13*(mes + 1)/5 + k + k/4 + j/4 + 5*j) % 7;
}

// Función para obtener el número de días en un mes
int diasEnMes(int mes, int año) {
    int dias[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
    if (mes == 2 && esBisiesto(año)) {
        return 29;
    }
    return dias[mes - 1];
}

// Función para mostrar el calendario de un mes
void mostrarMes(int mes, int año) {
    char *nombresMeses[] = {
        "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio",
        "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"
    };
    
    printf("\n     %s %d\n", nombresMeses[mes - 1], año);
    printf("Do Lu Ma Mi Ju Vi Sa\n");
    
    int primerDia = obtenerDiaSemana(1, mes, año);
    int diasMes = diasEnMes(mes, año);
    
    // Ajustar para que domingo sea 0 (la fórmula devuelve sábado como 0)
    primerDia = (primerDia + 6) % 7;
    
    // Espacios para el primer día
    for (int i = 0; i < primerDia; i++) {
        printf("   ");
    }
    
    // Imprimir los días
    for (int dia = 1; dia <= diasMes; dia++) {
        printf("%2d ", dia);
        if ((primerDia + dia) % 7 == 0) {
            printf("\n");
        }
    }
    printf("\n");
}

// Función para mostrar el calendario de un año completo
void mostrarAño(int año) {
    printf("\nCALENDARIO DEL AÑO %d\n", año);
    printf("====================\n");
    
    for (int mes = 1; mes <= 12; mes++) {
        mostrarMes(mes, año);
        printf("\n");
    }
}

int main() {
    int opcion, año, mes;
    time_t t = time(NULL);
    struct tm *tm_info = localtime(&t);
    int año_actual = tm_info->tm_year + 1900;
    int mes_actual = tm_info->tm_mon + 1;
    
    while (1) {
        printf("\n%s\n", "========================================");
        printf("          CALENDARIO EN C");
        printf("\n%s\n", "========================================");
        printf("1. Ver calendario del mes actual\n");
        printf("2. Ver calendario de un año específico\n");
        printf("3. Ver calendario de un mes específico\n");
        printf("4. Salir\n");
        printf("\nSelecciona una opción (1-4): ");
        
        scanf("%d", &opcion);
        
        switch (opcion) {
            case 1:
                printf("\nCalendario de %d/%d:\n", mes_actual, año_actual);
                mostrarMes(mes_actual, año_actual);
                break;
                
            case 2:
                printf("Ingresa el año: ");
                scanf("%d", &año);
                mostrarAño(año);
                break;
                
            case 3:
                printf("Ingresa el año: ");
                scanf("%d", &año);
                printf("Ingresa el mes (1-12): ");
                scanf("%d", &mes);
                if (mes >= 1 && mes <= 12) {
                    mostrarMes(mes, año);
                } else {
                    printf("Error: El mes debe estar entre 1 y 12.\n");
                }
                break;
                
            case 4:
                printf("¡Hasta luego!\n");
                return 0;
                
            default:
                printf("Opción no válida. Por favor selecciona 1-4.\n");
        }
    }
    
    return 0;
}
